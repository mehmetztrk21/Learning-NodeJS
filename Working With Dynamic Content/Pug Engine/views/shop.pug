extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content 
    main
    if prods.length >0
        .grid   <!--alttaki(each) for döngüsü (bütün ürünlerde dolaş.) --> 
            each product in prods  
                article.card.product-item   
                    header.card__header 
                        h1.product__title #{product.title}
                    .card__image
                    img(src="https://www.mobilcadde.com/fotograflar/ortgn/schema/big/minimal-cicek-1617.png" alt="product")
                    .card__content
                        h2.product__price $19.99
                        p.product__description Lorem, ipsum dolor sit amet consectetur adipisicing elit. Laborum, necessitatibus!
                    .card__actions 
                        button.btn Add to Card
    else
        h1 No Products
